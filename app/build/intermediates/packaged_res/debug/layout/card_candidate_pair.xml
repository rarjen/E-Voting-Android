<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        app:cardCornerRadius="10dp"
        android:elevation="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_marginVertical="5dp"
        android:layout_marginEnd="5dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgCover"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:src="@drawable/profile"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/tvCapres"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="CALON PRESIDEN"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/imgCover"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/montserrat_regular" />

            <TextView
                android:id="@+id/tvCawapres"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="CALON WAKIL PRESIDEN"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintTop_toBottomOf="@id/imgCover"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/montserrat_regular" />

            <TextView
                android:id="@+id/tvValuePresidentialName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCapres"
                android:layout_marginStart="10dp"
                android:layout_width="190dp"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textSize="12sp"
                android:layout_marginVertical="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="WAPRES"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvValueVicePresidentialName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvCapres"
                android:layout_marginStart="10dp"
                android:layout_width="190dp"
                android:textAlignment="center"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textSize="12sp"
                android:layout_marginVertical="3dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="CAWAPRES"
                android:layout_height="wrap_content" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>