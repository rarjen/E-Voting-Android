<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.bottomsheets.BottomSheetAlreadyVotedFragment">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="30dp"
        android:layout_marginBottom="-10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="18dp"
            android:layout_height="wrap_content" >
            <ImageView
                android:id="@+id/imageClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_close_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvSelamat"
                app:layout_constraintTop_toBottomOf="@id/imageClose"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40sp"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/pink"
                android:layout_marginTop="30dp"
                android:text="Anda sudah vote!"/>

            <ImageView
                android:id="@+id/ivCart"
                android:layout_marginTop="40dp"
                app:layout_constraintTop_toBottomOf="@id/tvSelamat"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/illustration__secure_safe_shield_man_login_key_login_"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/loginWarning"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Silakan lihat hasil pemilu!"
                app:layout_constraintTop_toBottomOf="@id/ivCart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnKembali"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/loginWarning"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="30dp"
                android:paddingVertical="10dp"
                android:layout_width="275dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/darkBlue"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="Kembali" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>