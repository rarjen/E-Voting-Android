<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aliceBlue"
    android:paddingTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.fragments.BiographyPersonFragment">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow_back_24"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        app:layout_constraintCircleRadius="30dp"
        android:id="@+id/candidateImg"
        app:layout_constraintTop_toBottomOf="@id/ivBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="180dp"
        android:outlineProvider="paddedBounds"
        android:elevation="5dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/profile"
        android:scaleType="fitXY"
        android:layout_height="180dp"/>

    <TextView
        android:id="@+id/tvNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="12sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/candidateImg"/>

    <TextView
        android:id="@+id/tvNamaValue"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Nama Calon kandidat"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="12sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvNama"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/separator1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvNamaValue"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:dividerInsetStart="100dp"
        app:dividerInsetEnd="100dp"/>

    <TextView
        android:id="@+id/tvTtl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tempat/Tanggal Lahir"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="12sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/separator1"/>

    <TextView
        android:id="@+id/tvTtlValue"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Semarang, 12 Januari 2001"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="12sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvTtl"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTtlValue"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:dividerInsetStart="100dp"
        app:dividerInsetEnd="100dp"/>

    <TextView
        android:id="@+id/tvParty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Partai Pengusung"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="12sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/separator2"/>

    <ImageView
        android:id="@+id/imgUrlpartyValue"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvParty"
        android:elevation="5dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/profile"/>

    <TextView
        android:id="@+id/tvPartyValue"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="PDIP"
        android:fontFamily="@font/montserrat_bold"
        android:textSize="12sp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@id/imgUrlpartyValue"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/separator3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPartyValue"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:dividerInsetStart="100dp"
        app:dividerInsetEnd="100dp"/>

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deskripsi Singkat"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="12sp"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/separator3"/>

    <TextView
        android:id="@+id/tvDescValue"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:text="Berikan Deskripsi Singkat"
        android:fontFamily="@font/montserrat_semi_bold"
        android:textSize="12sp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/tvDesc"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>